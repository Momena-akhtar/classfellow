FROM node:24-alpine

WORKDIR /app

COPY package*.json ./

RUN npm ci

# Copy source
COPY . .

RUN npm run build


RUN mkdir -p .next/standalone/.next && \
    cp -r .next/static .next/standalone/.next/ && \
    cp -r public .next/standalone/ || true

ENV PORT=8080
EXPOSE 8080

CMD ["node", ".next/standalone/server.js"]